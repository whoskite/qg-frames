rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the user owns the document
    function isOwner(fid) {
      return request.auth.uid == fid;
    }

    // Match user's data
    match /users/{userId}/{document=**} {
      allow read, write: if true;  // Temporarily allow all access for testing
      // TODO: Change to proper auth after testing:
      // allow read, write: if isSignedIn() && isOwner(userId);
    }
  }
} 